<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <TextView
            android:id="@+id/kitapIsim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainTextColor"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/cardView"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/kitapYazar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainTextColor"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/cardView"
            android:layout_below="@+id/kitapIsim"
            android:textSize="15sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/kitapKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainTextColor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/cardView"
            android:layout_below="@+id/kitapYazar"/>

        <TextView
            android:id="@+id/kitapBoyut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainTextColor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/cardView"
            android:layout_below="@+id/kitapKategori"/>

        <RelativeLayout
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground">

            <TextView
                android:id="@+id/kitapIsimArka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mainTextColor"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/kitapYazarArka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mainTextColor"
                android:layout_margin="5dp"
                android:textStyle="italic"
                android:layout_centerInParent="true"
                android:layout_below="@+id/kitapIsimArka"/>

            <ImageView
                android:id="@+id/kitapKapak"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"/>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_card_view_image_button"
            android:adjustViewBounds="true"
            android:background="@color/cardViewImageButtonBackground"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>