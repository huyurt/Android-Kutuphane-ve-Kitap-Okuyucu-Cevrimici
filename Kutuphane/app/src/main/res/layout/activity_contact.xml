<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kutuphane.com.kutuphane.ContactActivity"
    android:background="@color/colorBackground"
    android:padding="10dp">

    <WebView
        android:id="@+id/webViewIletisim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/mainTextColor"
        android:background="@color/colorBackground"
        android:layout_above="@+id/relativeLayoutIletisimAlt"/>

    <RelativeLayout
        android:id="@+id/relativeLayoutIletisimAlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/textViewIletisimMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/mainTextColor"
                android:gravity="center"
                android:padding="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/textViewIletisimMail">

                <ImageView
                    android:id="@+id/imageViewIletisim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/textViewIletisimAppAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mainTextColor"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/imageViewIletisim"
                    android:layout_marginStart="10dp"
                    android:gravity="center"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutIletisimGizle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"/>

</RelativeLayout>